/* Start Variable Declaration */

title-background = rgb(0, 121, 107)
title-colour = rgb(225,225,225)
content-background = rgb(0, 150, 136)
content-main-colour = rgb(225,225,225)
content-secondary-colour = rgba(255, 255, 255, 0.5)
background-colour = rgb(255, 255, 255)
text-colour = rgb(32,32,32)
unselectable-text-colour = rgb(115,115,115)
today-text-colour = rgb(0, 150, 136)
selected-text-colour = background-colour
selected-background-colour = rgb(0, 150, 136)
hover-text-colour = darken(selected-text-colour, 10%)
hover-background-colour = lighten(selected-background-colour, 10%)
button-text-colour = rgb(0, 150, 136)

clearfix()
	&:after, &:before
		display: table;
		content: " "
	&:after
		clear: both

content-height = 22.9rem

/* End Variable Declaration */

/* Start Main Styling */

.visuallyhidden
	visibility: hidden

.voile
	z-index: 8888
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	background-color: #333
	opacity: 0.66
.md-date md-icon
	top: 24px
	cursor: pointer
	outline: none
.md-date label
	padding-left: 36px !important
.md-date > .picker
	z-index: 9999
	position: fixed
	margin: auto;
	right: 0
	left: 0
	top: 10%
	overflow: hidden
	border: none
	width: 350px
	font-size: 12px
	background-color:#FFF
	& > .display
		position: relative
		width: 47%
		height: 100%
		cursor: pointer
		transition: color 0.6s ease-in-out
		& > .title
			background-color: title-background
			color: title-colour
			line-height: 2.5rem
		& > .content
			position: absolute
			left: 0px
			right: 0px
			bottom: 0px
			top: 2.4rem
			padding: 2.3rem 0
			font-size: 1.5rem
			background-color: content-background
			color: content-main-colour
			& > .super-title
				text-transform: uppercase
			& > .main-title
				font-size: 6.1rem
				line-height: 6.1rem
				height: 6.1rem
				& > small
					font-size: 1.1rem
					margin-left: 0.3rem
			& > .sub-title
				color: content-secondary-colour
	& > .control
		width: 100%
		overflow-x: hidden
		position: relative
		& > .full-title
			display: none
			background-color: title-background
			color: title-colour
			line-height: 2.4rem
		& > .slider
			position: absolute !important
			width: 100%
			transition: left 0.6s ease-in-out
			& > .date-control, & > .time-control, & > .switch-control
				float: left
				height: content-height
			& > .date-control, & > .time-control
				overflow-y: hidden
				width: 100%
			& > .switch-control
				width: 10%
				cursor: pointer
				padding: 0 0.6rem
				& > i.fa
					&:first-child
						margin-right 1.4rem
					&:last-child
						margin-left 1.4rem
			& > .date-control
				& > .title
					font-weight: 500
					line-height: 2.4rem
					clearfix()
					& > span.month-part
						cursor: pointer
						position: relative
						margin-right: 0.5rem
						&:hover
							text-decoration: underline
						& > select
							position: absolute
							top: 0px
							bottom: 0px
							left: 0px
							right: 0px
							opacity: 0
							width: 100%
					& > input
						border: none
						width: 4.3rem
				& > .headers
					font-weight: 500
					font-size: 1rem
					padding-left: 1.5rem
					color: unselectable-text-colour
					text-align: left
					& > .day-cell
						text-align: center
						cursor: default
				& .day-cell
					float: left
					width: 2.7rem
					height: 2.7rem
					padding: 0
					margin: 0
					cursor: pointer
					border-radius: 3.0rem
				& > .days
					font-size: 1rem
					padding-left: 1.5rem
					width: (2.7 * 7.7)rem
					& .day-cell
						color: text-colour
						&.today
							color: today-text-colour
						&.selected
							color: selected-text-colour
							background-color: selected-background-colour
						&:hover, &:active
							color: hover-text-colour
							background-color: hover-background-colour
	&.date-mode > .control > .slider
		left: 0%
	&:not(.time-mode-add):not(.time-mode-remove):not(.date-mode-add):not(.date-mode-remove)
		&.date-mode > .control > .slider > .time-control > *, &.time-mode > .control > .slider > .date-control > *
			display: none
	&.date-only > .control > .slider
		& > .switch-control, & > .time-control
			display: none
		& > .date-control
			width: 100%
			padding: 0 1.0rem
	& > .display, & > .control
		height: content-height
		float: left
		text-align: center
	& > .buttons
		clear: both
		padding: 0.7rem
		text-align: right
	& button, & .button
		color: button-text-colour
		line-height: 0
		min-width: 0
		margin: 0
